# =============================================================================
# Ultimate Security Intelligence Platform - 生產環境變數範例
# 複製此檔案為 .env 並設定對應的實際值
# =============================================================================

# -----------------------------------------------------------------------------
# AWS 相關設定
# -----------------------------------------------------------------------------
AWS_ACCOUNT_ID=123456789012
AWS_DEFAULT_REGION=ap-northeast-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
S3_BACKUP_BUCKET=security-intel-backups

# -----------------------------------------------------------------------------
# 容器版本設定
# -----------------------------------------------------------------------------
BACKEND_VERSION=latest
FRONTEND_VERSION=latest

# -----------------------------------------------------------------------------
# 資料庫設定
# -----------------------------------------------------------------------------
POSTGRES_DB=security_intel
POSTGRES_USER=security_user
POSTGRES_PASSWORD=your-strong-postgres-password

# -----------------------------------------------------------------------------
# Redis 設定
# -----------------------------------------------------------------------------
REDIS_PASSWORD=your-strong-redis-password

# -----------------------------------------------------------------------------
# MQTT 設定
# -----------------------------------------------------------------------------
MQTT_USERNAME=security_intel
MQTT_PASSWORD=your-strong-mqtt-password

# -----------------------------------------------------------------------------
# JWT 設定
# -----------------------------------------------------------------------------
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long

# -----------------------------------------------------------------------------
# 前端 API 設定
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_URL=https://api.your-domain.com
NEXT_PUBLIC_WEBSOCKET_URL=wss://api.your-domain.com
NEXT_PUBLIC_MQTT_URL=wss://mqtt.your-domain.com

# -----------------------------------------------------------------------------
# CORS 設定
# -----------------------------------------------------------------------------
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# -----------------------------------------------------------------------------
# 外部服務 API 金鑰
# -----------------------------------------------------------------------------
VIRUSTOTAL_API_KEY=your-virustotal-api-key
MITRE_API_KEY=your-mitre-api-key
SHODAN_API_KEY=your-shodan-api-key
ABUSEIPDB_API_KEY=your-abuseipdb-api-key
HIBP_API_KEY=your-hibp-api-key

# 測試環境專用 API 金鑰
VIRUSTOTAL_API_KEY_SIT=your-virustotal-api-key-sit
MITRE_API_KEY_SIT=your-mitre-api-key-sit
SHODAN_API_KEY_SIT=your-shodan-api-key-sit
ABUSEIPDB_API_KEY_SIT=your-abuseipdb-api-key-sit
HIBP_API_KEY_SIT=your-hibp-api-key-sit

# -----------------------------------------------------------------------------
# 監控設定
# -----------------------------------------------------------------------------
GRAFANA_ADMIN_PASSWORD=your-grafana-admin-password

# -----------------------------------------------------------------------------
# 備份設定
# -----------------------------------------------------------------------------
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# -----------------------------------------------------------------------------
# 安全性設定
# -----------------------------------------------------------------------------
# 建議更換為強密碼
DEFAULT_ADMIN_PASSWORD=your-default-admin-password
DEFAULT_ADMIN_EMAIL=admin@your-domain.com

# -----------------------------------------------------------------------------
# 通知設定
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@your-domain.com

# -----------------------------------------------------------------------------
# 警示設定
# -----------------------------------------------------------------------------
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
ALERT_EMAIL_RECIPIENTS=admin@your-domain.com,security@your-domain.com

# -----------------------------------------------------------------------------
# 效能設定
# -----------------------------------------------------------------------------
MAX_UPLOAD_SIZE=10MB
MAX_CONCURRENT_REQUESTS=1000
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# -----------------------------------------------------------------------------
# 快取設定
# -----------------------------------------------------------------------------
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000

# -----------------------------------------------------------------------------
# 日誌設定
# -----------------------------------------------------------------------------
LOG_LEVEL=info
LOG_RETENTION_DAYS=30
LOG_MAX_SIZE=100MB

# -----------------------------------------------------------------------------
# 測試環境設定
# -----------------------------------------------------------------------------
TEST_SCHEDULE=0 */6 * * *
TEST_DATA_GENERATION_INTERVAL=300

# =============================================================================
# 設定說明
# =============================================================================
# 1. 請務必更換所有預設密碼和金鑰
# 2. 確保 AWS 憑證有適當的權限
# 3. 外部服務 API 金鑰需要向對應服務提供商申請
# 4. 生產環境請使用強密碼和加密連接
# 5. 定期輪換憑證和金鑰
# ============================================================================= 